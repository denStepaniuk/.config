{
    "editor.lineNumbers": "relative", // shows relative line number in crumbs leftside
    "editor.fontLigatures": true,
    "editor.fontFamily": "'JetbrainsMono Nerd Font', 'monospace'",
    "editor.fontWeight": "400",
    "editor.minimap.enabled": false,
    "editor.fontSize": 14,
    "editor.cursorBlinking": "solid",
    "editor.renderWhitespace": "none", // enable white spaces rendering as indents 
    "editor.renderLineHighlight": "none", // whether render line under coursoure or not 
    "editor.cursorSmoothCaretAnimation": "off",
    "editor.scrollbar.vertical": "hidden", // hide scrollbars from side abd bottom
    "editor.scrollbar.horizontal": "hidden",
    "explorer.compactFolders": false, // whether or not concatenate folders in ine row 
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairsHorizontal": false,
    "breadcrumbs.enabled": false,
    "editor.formatOnSave": false,
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true, // inserts empty line in the end
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.tabs.enabled": false,
    "extensions.ignoreRecommendations": true,
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "explorer.confirmDelete": false,
    "workbench.tree.expandMode": "singleClick",
    "workbench.activityBar.location": "top",
    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false,
    "workbench.editor.showTabs": "single",
    "workbench.tree.renderIndentGuides": "onHover",
    "workbench.tree.indent": 15,
    // VIM related
    // "vim.leader": " ", // plugins have to manage it
    "vim.useSystemClipboard": true,
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.color": "gold",
    "vim.highlightedyank.duration": 300,
    "vim.highlightedyank.textColor": "black",
    "vim.searchHighlightColor": "orange",
    "vim.searchHighlightTextColor": "black",
    "vim.searchMatchColor": "white",
    "vim.searchMatchTextColor": "black",
    "workbench.colorCustomizations": {
        "editorBracketMatch.border": "#d7e914",
        "focusBorder": "#fff200a0", // additional border for focus highlights
        "editor.foreground": "#ffffffc0", // color of the text
        "editor.wordHighlightBackground": "#00000000", // transparent background
        "editor.wordHighlightBorder": "#ffff00", // yellow border
        "editor.wordHighlightStrongBackground": "#00000000", // transparent background for write access
        "editor.wordHighlightStrongBorder": "#ffff00", // yellow border for write access
        "editorError.foreground": "#f53333",
        "editorWarning.foreground": "#F1FA8C",
        "editorInfo.foreground": "#8BE9FD",
        "editorHint.foreground": "#50FA7B"
    },
    "editor.semanticHighlighting.enabled": false,
    "editor.tokenColorCustomizations": {
        "strings": "#99d282",
        "textMateRules": [
            {
                "scope": "entity.name.function.java",
                "settings": {
                    "fontStyle": ""
                }
            },
            {
                "scope": [
                    "keyword.control.java",
                    "keyword.control.flow.python"
                ],
                "settings": {
                    "foreground": "#FFD700",
                    "fontStyle": ""
                }
            },
            { //return types and functon declaration
                "scope": [
                    "variable.other.object.java",
                    "entity.name.function.java",
                    "storage.type.java"
                ],
                "settings": {
                    "foreground": "#ffffffdf",
                    "fontStyle": ""
                }
            },
            {
                "scope": [
                    "storage.type.primitive.java",
                    "storage.modifier.java",
                    "storage.type.class.java",
                    "variable.other.java",
                    "storage.type.local.java",
                    "keyword.control.new.java",
                ],
                "settings": {
                    "foreground": "#888888",
                    "fontStyle": ""
                }
            },
            {
                "scope": [
                    "constant.numeric"
                ],
                "settings": {
                    "foreground": "#17e8b7d7"
                }
            },
            {
                "scope": [
                    "comment",
                    "punctuation.definition.comment"
                ],
                "settings": {
                    "foreground": "#edc58a"
                }
            },
            {
                "scope": "entity.name.tag.localname.xml",
                "settings": {
                    "foreground": "#ffffff3b",
                    "fontStyle": ""
                }
            },
            {
                "scope": [
                    "meta.package.java",
                    "meta.import.java",
                    "keyword.other.import.java",
                    "storage.modifier.package.java",
                    "storage.modifier.import.java",
                    "keyword.other.package.java"
                ],
                "settings": {
                    "foreground": "#ffffff3b",
                    "fontStyle": ""
                }
            },
            {
                "scope": "entity.name.tag.yaml",
                "settings": {
                    "foreground": "#FFFFFF",
                    "fontStyle": ""
                }
            }
        ]
    },
    "workbench.colorTheme": "yellowed",
    "containers.containerClient": "com.microsoft.visualstudio.containers.docker",
    "containers.orchestratorClient": "com.microsoft.visualstudio.orchestrators.dockercompose",
    "python.analysis.typeCheckingMode": "off",
}
